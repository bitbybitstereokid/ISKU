{{ 'about-benefit-icons.css' | asset_url | stylesheet_tag }}

{% style %}
    .benefit-icons.benefit-icons--{{ section.id }} {
        padding-top: {{ section.settings.padding_top | times: 0.8 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.8 | round: 0 }}px;
    }

    @media only screen and (min-width: 769px) {
        .benefit-icons.benefit-icons--{{ section.id }} {
            padding-top: {{ section.settings.padding_top }}px;
            padding-bottom: {{ section.settings.padding_bottom }}px;
        }
    }
{% endstyle %}

<div class="benefit-icons benefit-icons--{{ section.id }}">
    {% for block in section.blocks %}
        <div class="benefit-icons__item">
            <div class="benefit-icons__icon image-wrapper">
                {% if block.settings.icon != blank%}
                    {% comment %} {{ block.settings.icon | image_url: width: 60 | image_tag: alt: block.settings.icon.alt, loading: 'lazy' }} {% endcomment %}
                    {{ block.settings.icon }}
                {% else %}
                    {{ 'image' | placeholder_svg_tag: "placeholder" }}
                {% endif %}
            </div>
            <p class="benefit-icons__text">{{ block.settings.text }}</p>
        </div>
    {% endfor %}
</div>

{% schema %}
{
    "name": "Benefit icons",
    "settings": [
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Free spave above",
            "default": 50
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Free spave below",
            "default": 50
        }
    ],
    "max_blocks": 3,
    "blocks": [
        {
            "type": "icon",
            "name": "Benefit icon",
            "settings": [
                {
                    "type": "html",
                    "id": "icon",
                    "label": "Icon"
                },
                {
                    "type": "text",
                    "id": "text",
                    "label": "Text",
                    "default": "Style"
                }
            ]
        }
    ],
    "presets": [
    {
        "name": "Benefit icons",
        "blocks": [
            {
                "type": "icon",
                "settings": {
                    "text": "style"
                }
            },
            {
                "type": "icon",
                "settings": {
                    "text": "quality"
                }
            },
            {
                "type": "icon",
                "settings": {
                    "text": "fast delivery"
                }
            }
        ]
    }
  ]
}
{% endschema %}