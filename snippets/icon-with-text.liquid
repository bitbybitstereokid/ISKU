<div class="custom-icon-text">
{% if block.settings.icon_1 != blank or block.settings.heading_1 != blank %}
  <div class="custom-icon-text__item">
    {{ block.settings.icon_1 }}
    {% if block.settings.heading_1 %}
      <p class="custom-icon-text__text">{{ block.settings.heading_1 }}</p>
    {% endif %}
  </div>
{% endif %}
